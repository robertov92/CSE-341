<%- include('includes/header.ejs') %>
<h1>Sign-Up</h1>
<form class="login_signup" action="/project1/signup" method="POST">
   <% if (errorMessage) { %> 
      <div>
         <%= errorMessage %> 
      </div>
   <% } %> 
   <label>Email<br><input class="<%= validationErrors.find(e=>e.param === 'email') ? 'invalid' : '' %>" type="email" name="email" value="<%= oldInput.email %>"></label><br>
   <label>Password<br><input class="<%= validationErrors.find(e=>e.param === 'password') ? 'invalid' : '' %>" type="password" name="password" value="<%= oldInput.password %>"></label><br>
   <label>Confirm Password<br><input class="<%= validationErrors.find(e=>e.param === 'confirmPassword') ? 'invalid' : '' %>" type="password" name="confirmPassword" value="<%= oldInput.confirmPassword %>"></label><br>
   <button class="btn" type="submit">Sign-Up</button>
</form>
<%- include('includes/end.ejs') %> 