<%- include('includes/header.ejs') %> 

<% if (orders.length <= 0) { %>
    <h1>Nothing there!</h1>
<% } else { %>
    <ul>
        <% orders.forEach(order => { %>
            <li>
                <h1>Order - # <%= order._id %></h1>
                <ul class="orders__products">
                    <% order.products.forEach(p => { %>
                        <li><%= p.product.title %> (<%= p.quantity %>)</li>
                    <% }); %>
                </ul>
            </li>
        <% }); %>
    </ul>
<% } %>

<%- include('includes/end.ejs') %> 